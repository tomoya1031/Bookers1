<div class="index">
	<h1>Editing Book</h1>
	<%= form_for(@book) do |f| %>
	   <p>Title</p>
	   <%= f.text_field :title %>
	   <p>Body</p>
	   <%= f.text_area :body %>
	   <%= f.submit 'Create Book' ,class:"submit"%>
	   <%= link_to "Show", book_path(@book) ,class:"action" %>
	   <p class="action"> | </p>
	   <a class="action" href="/books">Back</a>
<% end %>
</div>