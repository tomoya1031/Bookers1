<div class="edit">
	<h2>Editing Book</h2>
	<%= form_for(@book) do |f| %>
	    <div class="box">
	        <p>Title</p>
	        <%= f.text_field :title %>
	    </div>
	    <div class="box">
	        <p>Body</p>
	        <%= f.text_area :body %>
	    </div>
	    <%= f.submit 'Update Book' ,class:"submit"%>
	    <%= link_to "Show", book_path(@book) ,class:"action" %>
	    <p class="action"> | </p>
	    <a class="action" href="/books">Back</a>
<% end %>
</div>